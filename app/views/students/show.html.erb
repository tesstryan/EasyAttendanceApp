<h1>Student #<%= @student.first_name %></h1>

<p>
  <b>First name:</b>
  <%= @student.first_name %>
</p>

<p>
  <b>Last name:</b>
  <%= @student.last_name %>
</p>

<p>
  <b>Profile pic url:</b>
  <%= @student.profile_pic_url %>
</p>


<% @students.each do |student| %>
<%= link_to 'Show', student_url(student) %>
<%= link_to 'Edit', edit_student_url(student) %>
<%= link_to 'Destroy', student_url(student), method: 'delete', data: { confirm: "Do you really want to delete this student?" } %>
